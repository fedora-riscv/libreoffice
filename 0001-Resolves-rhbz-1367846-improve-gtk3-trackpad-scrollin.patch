                 if (aEvent.mnDelta == 0)
                     aEvent.mnDelta = aEvent.mnNotchDelta;
                 aEvent.mbHorz = false;
-                aEvent.mnScrollLines = std::abs(aEvent.mnDelta) / 40;
-                if (aEvent.mnScrollLines == 0)
-                    aEvent.mnScrollLines = 1;
-
+                aEvent.mnScrollLines = std::abs(aEvent.mnDelta) / 40.0;
